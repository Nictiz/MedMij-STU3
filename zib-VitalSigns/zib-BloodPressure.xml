  <url value="http://nictiz.nl/fhir/StructureDefinition/zib-BloodPressure" />
  <name value="ZIB-BloodPressure" />
  <title value="ZIB BloodPressure" />
  <status value="draft" />
  <date value="2017-09-06T12:02:17.702+02:00" />
  <publisher value="Nictiz" />
  <contact>
    <name value="Nictiz" />
    <telecom>
      <system value="email" />
