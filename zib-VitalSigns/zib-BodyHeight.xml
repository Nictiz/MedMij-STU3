        <identity value="zib-bodyheight" />
        <map value="NL-CM:12.2.5" />
      </mapping>
    </element>
    <element id="Observation.extension:position.value[x]:valueCodeableConcept">
      <path value="Observation.modifierExtension.valueCodeableConcept" />
